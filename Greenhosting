    <script>
        // DOM Elements
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const navLinks = document.querySelector('.nav-links');
        const domainInput = document.getElementById('domain-input');
        const searchButton = document.getElementById('search-button');
        const checkAvailabilityButton = document.getElementById('check-availability');
        const tldOptions = document.querySelectorAll('.tld-option');
        const resultsSection = document.getElementById('results-section');
        const resultsGrid = document.getElementById('results-grid');
        const compareSection = document.getElementById('compare-section');
        const compareTableBody = document.getElementById('compare-table-body');
        const clearSelectionButton = document.getElementById('clear-selection');
        const hostingGrid = document.getElementById('hosting-grid');
        
        // Mobile Menu Toggle
        mobileMenuBtn.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            mobileMenuBtn.innerHTML = navLinks.classList.contains('active') 
                ? '<i class="fas fa-times"></i>' 
                : '<i class="fas fa-bars"></i>';
        });
        
        // Close mobile menu when clicking on a link
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('active');
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            });
        });
        
        // Selected TLDs
        let selectedTlds = ['.com'];
        
        // Sample pricing data (in a real app, this would come from an API)
        const pricingData = {
            '.com': { firstYear: 12.99, renewal: 18.99 },
            '.net': { firstYear: 14.99, renewal: 19.99 },
            '.org': { firstYear: 13.99, renewal: 17.99 },
            '.io': { firstYear: 39.99, renewal: 49.99 },
            '.co': { firstYear: 29.99, renewal: 34.99 },
            '.dev': { firstYear: 19.99, renewal: 24.99 },
            '.tech': { firstYear: 34.99, renewal: 44.99 },
            '.store': { firstYear: 29.99, renewal: 39.99 }
        };
        
        // Toggle TLD selection
        tldOptions.forEach(option => {
            option.addEventListener('click', () => {
                const tld = option.getAttribute('data-tld');
                
                if (option.classList.contains('selected')) {
                    if (selectedTlds.length > 1) {
                        option.classList.remove('selected');
                        selectedTlds = selectedTlds.filter(item => item !== tld);
                    }
                } else {
                    option.classList.add('selected');
                    selectedTlds.push(tld);
                }
            });
        });
        
        // Check domain availability
        function checkAvailability() {
            const domainName = domainInput.value.trim();
            
            if (domainName === '') {
                showAlert('Please enter a domain name');
                return;
            }
            
            if (selectedTlds.length === 0) {
                showAlert('Please select at least one TLD');
                return;
            }
            
            // Clear previous results
            resultsGrid.innerHTML = '';
            
            // Generate results for each selected TLD
            selectedTlds.forEach(tld => {
                const fullDomain = domainName + tld;
                const isAvailable = Math.random() > 0.5; // Random availability for demo
                const priceInfo = pricingData[tld] || { firstYear: 0, renewal: 0 };
                
                const domainCard = document.createElement('div');
                domainCard.className = 'domain-card';
                domainCard.innerHTML = `
                    <div class="domain-name">
                        <i class="fas fa-globe"></i> ${fullDomain}
                    </div>
                    <div class="domain-status ${isAvailable ? 'available' : 'taken'}">
                        <i class="fas ${isAvailable ? 'fa-check-circle' : 'fa-times-circle'}"></i>
                        ${isAvailable ? 'Available' : 'Taken'}
                    </div>
                    ${isAvailable ? `
                        <div class="domain-price">$${priceInfo.firstYear.toFixed(2)}<span>/first year</span></div>
                        <div class="domain-actions">
                            <button class="btn btn-primary add-to-compare" data-domain="${fullDomain}" data-price="${priceInfo.firstYear}" data-renewal="${priceInfo.renewal}">
                                <i class="fas fa-plus"></i> Compare
                            </button>
                            <button class="btn btn-secondary">
                                <i class="fas fa-shopping-cart"></i> Register
                            </button>
                        </div>
                    ` : `
                        <div class="domain-actions">
                            <button class="btn btn-secondary">
                                <i class="fas fa-search"></i> WHOIS Lookup
                            </button>
                        </div>
                    `}
                `;
                
                resultsGrid.appendChild(domainCard);
            });
            
            // Show results section
            resultsSection.style.display = 'block';
            
            // Initialize compare buttons
            document.querySelectorAll('.add-to-compare').forEach(button => {
                button.addEventListener('click', addToCompare);
            });
            
            // Scroll to results
            resultsSection.scrollIntoView({ behavior: 'smooth' });
        }
        
        // Add domain to compare table
        function addToCompare(e) {
            const button = e.target.closest('.add-to-compare');
            const domain = button.getAttribute('data-domain');
            const price = button.getAttribute('data-price');
            const renewal = button.getAttribute('data-renewal');
            
            // Check if domain already in comparison
            if (document.querySelector(`.compare-table tr[data-domain="${domain}"]`)) {
                showAlert('This domain is already in the comparison table');
                return;
            }
            
            // Add to comparison table
            const row = document.createElement('tr');
            row.setAttribute('data-domain', domain);
            row.innerHTML = `
                <td>${domain}</td>
                <td><span class="domain-status available"><i class="fas fa-check-circle"></i> Available</span></td>
                <td>$${parseFloat(price).toFixed(2)}</td>
                <td>$${parseFloat(renewal).toFixed(2)}</td>
                <td>
                    <button class="btn btn-primary" style="padding: 0.5rem 1rem;">
                        <i class="fas fa-shopping-cart"></i>
                    </button>
                    <button class="btn btn-secondary remove-from-compare" style="padding: 0.5rem 1rem;">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            `;
            
            compareTableBody.appendChild(row);
            
            // Show compare section if hidden
            compareSection.style.display = 'block';
            
            // Initialize remove buttons
            document.querySelectorAll('.remove-from-compare').forEach(btn => {
                btn.addEventListener('click', removeFromCompare);
            });
            
            // Scroll to compare section
            compareSection.scrollIntoView({ behavior: 'smooth' });
        }
        
        // Remove domain from compare table
        function removeFromCompare(e) {
            const row = e.target.closest('tr');
            row.remove();
            
            // Hide compare section if empty
            if (compareTableBody.children.length === 0) {
                compareSection.style.display = 'none';
            }
        }
        
        // Clear comparison table
        clearSelectionButton.addEventListener('click', () => {
            compareTableBody.innerHTML = '';
            compareSection.style.display = 'none';
        });
        
        // Show alert message
        function showAlert(message) {
            const alert = document.createElement('div');
            alert.className = 'alert-message';
            alert.innerHTML = `
                <div style="position: fixed; top: 20px; left: 50%; transform: translateX(-50%); 
                    background-color: var(--danger); color: white; padding: 1rem 2rem; 
                    border-radius: var(--rounded-lg); box-shadow: var(--shadow-lg); z-index: 1000;
                    display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-exclamation-circle"></i> ${message}
                </div>
            `;
            
            document.body.appendChild(alert);
            
            setTimeout(() => {
                alert.remove();
            }, 3000);
        }
        
        // Event listeners
        checkAvailabilityButton.addEventListener('click', checkAvailability);
        searchButton.addEventListener('click', checkAvailability);
        
        domainInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                checkAvailability();
            }
        });
        
        // Initialize sections as hidden
        resultsSection.style.display = 'none';
        compareSection.style.display = 'none';
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
</body>
</html>
